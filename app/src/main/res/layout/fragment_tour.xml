<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_tour_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.tour.presentation.TourFragment">

    <ImageView
        android:id="@+id/image_tour_tourpackage_photo"
        tools:ignore="ContentDescription"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/text_tour_tourpackage_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_tour_tourpackage_photo"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp" />

    <!--<TextView-->
    <!--android:id="@+id/text_tour_tourpackage_rating"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/text_tour_tourpackage_description"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_marginEnd="46dp"-->
    <!--android:layout_marginBottom="0dp" />-->


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_tour_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tour_tourpackage_description"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_tour_fragment"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_below="@+id/tab_tour_fragment"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/white" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tour_fragment_transition_reviewnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="401dp"
        android:src="@drawable/ic_add_review"
        app:layout_anchor="@id/image_tour_tourpackage_photo"
        app:layout_anchorGravity="right" />

</RelativeLayout>

